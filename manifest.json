{
    "manifest_version": 3,
    "name": "Context Buddy",
    "version": "1.0",
    "description": "Get AI-powered contextual definitions for any highlighted text",
    
    "permissions": [
        "activeTab",
        "storage"
    ],
    
    "background": {
        "service_worker": "background.js"
    },
    
    "content_scripts": [
        {
            "matches": [
                "https://*.wikipedia.org/*",
                "https://*.medium.com/*",
                "https://*.stackoverflow.com/*",
                "https://*.github.com/*",
                "https://developer.mozilla.org/*",
                "https://*.reddit.com/*"
            ],
            "js": ["content.js"],
            "css": ["styles.css"]
        }
    ]
}